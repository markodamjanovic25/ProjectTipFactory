@model ProjectXbet.ViewModels.LeagueViewModel
<div class="col-xl-10 col-lg-12 col-sm-12">
    <div class="stats-tips-holder text-center mt-3 p-1" id="stats-tips-holder">
        <div class="mt-3 tips-holder-header">
            <div>
                <img src="@Model.League.LeagueFlag" alt="flag" width="33" height="22" />
                <h5><span class="text-dark d-inline">@Model.League.LeagueName</span></h5>
            </div>
            <h3><span class="table-heading">tips</span></h3>
        </div>
        <div class="table-holder">
            <table class="table table-dark text-center">
                <tr>
                    <th scope="col">datetime</th>
                    <th scope="col"></th>
                    <th scope="col">match</th>
                    <th scope="col"></th>
                    <th scope="col">tip</th>
                    <th class="tip-name-cell" scope="col"></th>
                    <th scope="col">odds</th>
                    <th scope="col">
                        @*<select>
                                @foreach(var item in Model.Leagues)
                                {
                                    <option value="@item.LeagueId">@item.LeagueName</option>
                                }
                            </select>*@
                    </th>
                </tr>
                @foreach (var item in Model.Predictions)
                {
                    <tr>
                        <td align="center"><small>@item.Match.MatchDateTime.Day/@item.Match.MatchDateTime.Month @item.Match.MatchDateTime.Hour:@item.Match.MatchDateTime.Minute</small></td>
                        <td align="center"><img src=@item.Match.League.LeagueFlag width="33" height="22"></td>
                        <td align="center"><small>@item.Match.ClubHomeName - @item.Match.ClubAwayName</small></td>
                        <td align="center">@item.Match.ClubHomeGoals:@item.Match.ClubAwayGoals (@item.Match.ClubHomeGoalsHalf:@item.Match.ClubAwayGoalsHalf)</td>
                        <td align="center"><img src=@item.Tip.TipFlag width="33" height="22" /> </td>
                        <td class="tip-name-cell" align="center"><small>@item.Tip.TipName</small></td>
                        @if (item.IsCorrect.Value == true)
                        {
                            <td class="text-adventurous" align="center"><small>@item.Odds</small></td>
                            <td align="center"><img src="~/img/IsCorrectTrue.svg" /></td>
                        }
                        else
                        {
                            <td class="text-ludicrous" align="center"><small>@item.Odds</small></td>
                            <td align="center"><img src="~/img/IsCorrectFalse.svg" /></td>
                        }
                    </tr>
                }
            </table>
        </div>
    </div>

</div>
